{
    "manifest_version": 2,
    "name": "Kurwoskrypt",
    "version": "1.0.1",
    "description": "Kultowy ju≈º #kurwoskrypt autorstwa Kerai jako wtyczka do Chrome'a.",
    "icons": {
        "128": "chrome/icons/icon-128.png",
        "48": "chrome/icons/icon-48.png",
        "16": "chrome/icons/icon-16-active.png"
    },
    "browser_action": {
        "default_icon": "chrome/icons/icon-16.png"
    },
    "permissions": [
        "tabs",
        "<all_urls>"
    ],
    "content_scripts": [{
        "js": [
            "chrome/content.js"
        ],
        "matches": [
            "<all_urls>"
        ],
        "run_at": "document_end"
    }],
    "background": {
        "scripts": [
            "chrome/background.js"
        ]
    },
    "web_accessible_resources": [
        "skrypt.js"
    ]
}
